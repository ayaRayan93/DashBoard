@model DashBoard.Models.Basics

@{
    ViewBag.Title = "معلومات الاتصال";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<style>
    h2 {text-align:right
    }
    .contact {
        border:1px solid gray;
        margin:auto auto;
        width:50%;
        border-radius:12px;
        padding:2%;
        text-align:right
    }
</style>


@using (Html.BeginForm("Home"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <h2>معلومات الاتصال</h2>
        <div class="contact" dir="rtl">
            <div class="form-group">
                
                <div class="col-md-12">
                    <label class="control-label">التليفون</label>
                    @Html.EditorFor(model => model.callus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.callus, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-12">
                    <label class="control-label">البريد الالكتروني</label>
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                
                <div class="col-md-12">
                    <label class="control-label">  العنوان بالعربي</label>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12">
                    <label class="control-label">  العنوان بالانجليزي</label>
                   <input type="text" name="addr" id="addr" class = "form-control" />
                   
                </div>
            </div>


            <div class="form-group">
              
                <div class="col-md-12">
                    <label class="control-label">الموقع الالكتروني</label>
                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3"><i class="fas fa-link"></i></span>
                    </div>
                    @Html.EditorFor(model => model.website, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.website, "", new { @class = "text-danger" })
                  </div>
                 </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                </div>
            </div>
        </div>
        
        
       

    </div>
}

