@model DashBoard.Models.SubCategory

@{
    ViewBag.Title = "التصنيفات الفرعية";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2 style="text-align:right">اضافة تصنيف فرعي</h2>

@using (Html.BeginForm("subcategory", "Dash", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="" dir="rtl" style="margin:auto auto; text-align:right;width:600px">
        <p style="color:red">@ViewBag.Emsg</p>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <label>خدمة</label>
                @Html.DropDownListFor(m => m.FKServID, ViewBag.listServ as IEnumerable<SelectListItem>, new { @class = "form-control" })
                 @Html.ValidationMessageFor(model => model.FKServID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <label>اسم التصنيف</label>
                @Html.EditorFor(model => model.SubCateName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubCateName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="اضافة" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

