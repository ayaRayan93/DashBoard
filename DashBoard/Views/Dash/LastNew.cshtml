@model DashBoard.Models.imgNew

@{
    ViewBag.Title = "الاخبار الحديثة";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2 style="text-align:right">اضافة خبر جديد</h2>

@using (Html.BeginForm("LastNew", "Dash", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="" dir="rtl" style="margin:auto auto; text-align:right;width:600px">
        <p style="color:red">@ViewBag.msg</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <label class="control-label ">
                    صورة الخبر
                    </label>
                    <input type="file" name="imgfile" class="form-control"/>
                    @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
           </div>
            
        </div>

        <div class="form-group">
          
            <div class="col-md-12">
                <label class="control-label">عنوان الخبر الرئيسي</label>
                @Html.EditorFor(model => model.Headertxt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Headertxt, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group">
      
            <div class="col-md-12">
                <label class="control-label">تاريخ الخبر </label>
                <input type="date"  class="form-control"/>
                @Html.ValidationMessageFor(model => model.DateNew, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group">
 
            <div class="col-md-12">
                <label class="control-label">الخبر</label>
                <textarea class="form-control" cols="5" rows="7" name="Maintxt"></textarea>
                @Html.ValidationMessageFor(model => model.Maintxt, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group">
         
            <div class="col-md-12">
                @Html.EditorFor(model => model.FKBasicID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FKBasicID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="اضافة" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

