@model DashBoard.Models.Services

@{
    ViewBag.Title = "الخدمات";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2 style="text-align:right">اضافة خدمة جديدة</h2>

@using (Html.BeginForm("Services", "Dash", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="" dir="rtl" style="margin:auto auto; text-align:right;width:600px">
            <p style="color:red">@ViewBag.Emsg</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label ">
                    صورة الخدمة
                </label>
                <input type="file" name="imgfile" class="form-control" />
                @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
            </div>
       
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">  عنوان الخدمة الرئيسي بالعربي </label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label">  عنوان الخدمة الرئيسي بالانجليزي </label>
                    @Html.EditorFor(model => model.enName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.enName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                 <div class="col-md-12">
                     <label class="control-label">وصف الخدمة بالعربي</label>
                    @Html.EditorFor(model => model.textServe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.textServe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label class="control-label"> وصف الخدمة بالانجليزي </label>
                    @Html.EditorFor(model => model.entxtServe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.textServe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="اضافة" class="btn btn-primary" />
            </div>
        </div>
        </div>
       
     </div>
 
}
@{Html.RenderAction("_services", "Dash");}

